<?xml version="1.0" encoding="UTF-8"?>

<magic>
  <View id="root" class="root" resizable="1" resize-corner="1" margin="0"
        padding="0" border="0" background-color="FF000000">
    <LcarsSettings tab-font-size="18" tab-active-color="$lcars-moonlitViolet" tab-inactive-color="$lcars-africanViolet"
                   tab-text-color="FF000000" tab-underline-color="FFCC99FF" combobox-label-font-multiplier="0.9"
                   combobox-font-multiplier="0.85" text-button-font-multiplier="0.6"
                   tab-button-font-multiplier="0.6" popup-menu-font-size="15" popup-menu-item-font-multiplier="1"
                   popup-menu-item-height-multiplier="1.3" combobox-border-radius="4"
                   combobox-arrow-size="6" combobox-arrow-padding="8" popup-menu-border-size="2"
                   button-hover-color="$lcars-moonlitViolet" button-down-color="$lcars-africanViolet"
                   button-border-color="$lcars-orange" button-border-thickness="2"
                   min-width="0" max-width="0"/>
    <View flex-direction="row" background-color="FF000000" padding="0"
          margin="0" id="real-root">
      <View flex-direction="column">
        <View flex-direction="column" border="2" margin="6" border-color="$lcars-africanViolet"
              id="MIDI Device" max-height="80">
          <MidiDeviceSelector id="midi_device_selector" flex-align-self="stretch" caption="MIDI Device"/>
        </View>
        <View flex-direction="column" border="2" margin="6" border-color="$lcars-africanViolet"
              id="Chord Settings">
          <Label text="Chord Settings" font-size="30" flex-align-self="stretch"
                 max-height="40" label-text="$lcars-africanViolet" id="title"/>
          <IntComboBox flex-align-self="stretch" caption-placement="centred-left" caption="Midi Channel "
                       property="chord_channel" min-value="1" max-value="16" max-width="230"
                       max-height="50"/>
          <VariantSelector id="chord_voicing_style" flex-align-self="stretch" max-height="200"
                           flex-direction="column">
            <ComboBox/>
            <View tab-caption="Root Position" id="Root Position"/>
            <View tab-caption="From File" id="FileStyle">
              <FilePicker id="chord_voicing_file" file-filter="*.json"/>
            </View>
            <View tab-caption="Omni-84" id="Omni84"/>
          </VariantSelector>
          <View>
            <View flex-direction="column">
              <OmnifyMidiLearn id="latch_toggle_button" caption="Latch On / Off" accept-mode="Both"
                               caption-placement="centred-top"/>
              <ToggleButton id="latch_is_toggle" caption="Toggle Mode" caption-placement="centred-left" property="latch_is_toggle"/>
            </View>
            <OmnifyMidiLearn id="stop_button" accept-mode="Both" caption="Stop Chords"/>
          </View>
        </View>
        <View flex-direction="column" border="2" margin="6" border-color="$lcars-africanViolet"
              id="Strum Settings">
          <Label text="Strum Settings" font-size="30" flex-align-self="stretch"
                 max-height="40" label-text="$lcars-africanViolet" id="title"/>
          <IntComboBox flex-align-self="stretch" caption-placement="centred-left" caption="Midi Channel "
                       property="strum_channel" min-value="1" max-value="16" max-width="230"
                       max-height="50"/>
          <VariantSelector id="strum_voicing_style" flex-align-self="stretch" max-height="80">
            <ComboBox/>
            <View tab-caption="Plain Ascending"/>
            <View tab-caption="Omnichord"/>
          </VariantSelector>
          <View max-height="50">
            <OmnifyMidiLearn id="strum_plate_cc" caption="Strum CC" max-height="50" caption-placement="centred-left"
                             accept-mode="CCs Only" flex-align-self="stretch"/>
            <View max-height="0"/>
          </View>
          <View>
            <Slider lookAndFeel="LookAndFeel_V4" parameter="strum_gate_time_secs"
                    slider-type="rotary" caption="Gate"/>
            <Slider lookAndFeel="LookAndFeel_V4" parameter="strum_cooldown_secs"
                    slider-type="rotary" slider-textbox="textbox-below" caption="Cooldown"/>
          </View>
        </View>
      </View>
      <View display="tabbed" caption="Chord Quality Selection" caption-placement="top-left"
            border="2" border-color="$lcars-orange" caption-size="30">
        <View caption-color="$lcars-orange" tab-color="$lcars-africanViolet"
              margin="0" padding="0" border="0" radius="0" tab-caption="One Button Each">
          <ChordQualitySelector id="chord_quality_selector" border-color="$lcars-orange" margin="0"
                                padding="0" font-size="30" background-color="FF000000" label-color="$lcars-orange"
                                midi-learn-aspect-ratio="2"/>
        </View>
        <View tab-caption="One CC for All">
          <OmnifyMidiLearn id="chord_quality_cc" accept-mode="CCs Only"/>
        </View>
      </View>
    </View>
  </View>
  <Styles>
    <Style name="default">
      <Nodes/>
      <Classes>
        <root/>
      </Classes>
      <Types>
        <View background-color="000000" caption-color="$lcars-orange" tab-color="$lcars-africanViolet"
              lookAndFeel="Lcars" margin="3"/>
        <Label background-color="00000000" label-text="$lcars-orange" label-background="FF000000"
               caption-color="$lcars-orange" lookAndFeel="Lcars" margin="3"
               padding="0"/>
        <Slider lookAndFeel="Lcars" min-width="150" min-height="150" max-width="150"
                max-height="150"/>
        <ToggleButton lookAndFeel="Lcars" background-color="00000000" caption-color="$lcars-orange"/>
        <TextButton lookAndFeel="Lcars" background-color="00000000" margin="0" padding="0"
                    button-color="$lcars-orange" button-off-text="FF000000" button-on-text="FF000000"/>
        <ComboBox max-height="50" combo-text="$lcars-orange" combo-background="00000000"
                  background-color="00000000" caption-color="$lcars-orange" combo-outline="$lcars-orange"
                  combo-menu-background="$lcars-bluey" combo-menu-text="FF000000"
                  combo-menu-background-highlight="$lcars-butterscotch" combo-menu-text-highlight="FF000000"
                  lookAndFeel="Lcars" margin="3" caption-gap="8" caption-size="30"/>
        <IntComboBox max-height="50" combo-text="$lcars-orange" combo-background="00000000"
                     background-color="00000000" caption-color="$lcars-orange" combo-outline="$lcars-orange"
                     combo-menu-background="$lcars-bluey" combo-menu-text="FF000000"
                     combo-menu-background-highlight="$lcars-butterscotch" combo-menu-text-highlight="FF000000"
                     lookAndFeel="Lcars" margin="3" caption-gap="8" caption-size="30"/>
        <ChordQualitySelector lookAndFeel="Lcars" background-color="00000000"/>
        <OmnifyMidiLearn lookAndFeel="Lcars" background-color="00000000" caption-size="30"
                         caption-color="$lcars-orange" margin="0" padding="0" aspect-ratio="2"/>
        <VariantSelector background-color="00000000" lookAndFeel="Lcars" margin="0" padding="0"/>
        <FilePicker background-color="00000000" lookAndFeel="Lcars" margin="0" padding="0"/>
        <MidiDeviceSelector background-color="00000000" lookAndFeel="Lcars" margin="3" padding="0"
                            caption-color="$lcars-orange" caption-size="30"/>
      </Types>
      <Palettes>
        <default lcars-africanViolet="FFCC99FF" lcars-almond="FFFFAA90" lcars-almondCreme="FFFFBBAA"
                 lcars-blue="FF5566FF" lcars-bluey="FF8899FF" lcars-butterscotch="FFFF9966"
                 lcars-gold="FFFFAA00" lcars-goldenOrange="FFFF9900" lcars-gray="FF666688"
                 lcars-green="FF999933" lcars-ice="FF99CCFF" lcars-lilac="FFCC55FF"
                 lcars-limaBean="FFCCCC66" lcars-magenta="FFCC5599" lcars-mars="FFFF2200"
                 lcars-martian="FF99CC33" lcars-moonlitViolet="FF9966FF" lcars-orange="FFFF8800"
                 lcars-peach="FFFF8866" lcars-red="FFCC4444" lcars-sky="FFAAAAFF"
                 lcars-spaceWhite="FFF5F6FA" lcars-sunflower="FFFFCC99" lcars-tomato="FFFF5555"
                 lcars-violetCreme="FFDDBBFF"/>
      </Palettes>
    </Style>
  </Styles>
</magic>
